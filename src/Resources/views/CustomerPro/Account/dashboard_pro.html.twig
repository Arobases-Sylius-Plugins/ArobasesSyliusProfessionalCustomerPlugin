{% extends '@SyliusShop/Account/layout.html.twig' %}

{% block title %}{{ 'arobases_sylius_professional_customer.ui.professional_information'|trans }} | {{ parent() }}{% endblock %}

{% block breadcrumb %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">{{ 'arobases_sylius_professional_customer.ui.professional_information'|trans }}</div>
    </div>
{% endblock %}

{% block subcontent %}
    <h1 class="ui dividing header">
        {{ 'arobases_sylius_professional_customer.ui.professional_information'|trans }}
        <div class="sub header">{{ 'arobases_sylius_professional_customer.ui.manage_your_business_information_and_preferences'|trans }}</div>
    </h1>

    {{ sylius_template_event('sylius.shop.account.dashboard.after_content_header', {'customer': customer}) }}

    <div class="ui large list" id="customer-information" {{ sylius_test_html_attribute('customer-information') }}>

        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'arobases_sylius_professional_customer.ui.professional_information'|trans }}</h4>
                <div class="item">
                    {{ 'sylius.form.customer.fullName'|trans }} :
                    <strong>
                        {{ customer.fullName }}
                    </strong>
                </div>
                <div class="item">
                    {{ 'sylius.form.customer.email'|trans }} :
                    <strong>
                        {{ customer.email }}
                    </strong>
                </div>
                <div class="item">
                    {{ 'arobases_sylius_professional_customer.form.customer_pro.socialReason'|trans }} :
                    <strong>
                        {{ customer.socialReason }}
                    </strong>
                </div>
                <div class="item">
                    {{ 'arobases_sylius_professional_customer.form.customer_pro.vatNumber'|trans }} :
                    <strong>
                        {{ customer.vatNumber }}
                    </strong>
                </div>
                <div class="item">
                    {{ 'arobases_sylius_professional_customer.form.customer_pro.business_registration_number.label'|trans }} :
                    <strong>
                        {{ customer.businessRegistrationNumber }}
                    </strong>
                </div>
        </div>
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'arobases_sylius_professional_customer.ui.kbis'|trans }}</h4>
            <object type="application/pdf" width="100%" height="100%">
                <param name="src" value="{{ asset(customer.filePath) }}" />
                {{ 'arobases_sylius_professional_customer.ui.display_fail'|trans }}
            </object>
            <a href="{{ asset(customer.filePath) }}">{{ 'arobases_sylius_professional_customer.ui.download'|trans }}</a>
        </div>

        <div class="item">
            {% if customer.isProVerified %}
                <span class="ui icon green basic label"><i class="checkmark icon"></i> {{ 'sylius.ui.verified'|trans }}</span>
            {% else %}
                <span class="ui icon red basic label"><i class="remove icon"></i> {{ 'sylius.ui.not_verified'|trans }}</span>
            {% endif %}
        </div>
    </div>

    {{ sylius_template_event('sylius.shop.account.dashboard.after_information', {'customer': customer}) }}

{% endblock %}
